<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <!-- Button Style -->
    <style name="ButtonBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/spacing_medium</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonBase.Green" parent="ButtonBase">
        <item name="android:background">@drawable/btn_green_background</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ButtonBase.Blue">
        <item name="android:background">@drawable/btn_blue_background</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- EditText Style -->
    <style name="EditTextBase">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:padding">@dimen/spacing_large</item>
        <item name="android:textColor">@color/text_gray_dark</item>
        <item name="android:background">@drawable/bg_white_border_grey_radius</item>
    </style>

    <!-- TextView Style -->
    <style name="TextViewBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_size_medium</item>
        <item name="android:textColor">@color/grey_text</item>
        <item name="android:layout_marginTop">@dimen/spacing_medium</item>
        <item name="android:layout_marginBottom">@dimen/spacing_medium</item>
    </style>

</resources>
