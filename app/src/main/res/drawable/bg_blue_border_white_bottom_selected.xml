<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="#2D94E8"/>
        </shape>

    </item>
    <item
        android:left="30dp"
        >
        <shape
            android:shape="rectangle">
            <solid android:color="@android:color/white"/>
